<div class="row header_bg">

  <div class="col col-md-12 mt-5">
    <h4 align="right" class="mr-4"><%= link_to "Home", root_path, class: "partner_link" %></h4>
    <h1 align="center" class="mt-5 header_text">DROPALLEY</h1>    
    <h1 align="center" class="mt-5 header_text">Become a DropAlley partner to get into your local fashion scene.</h1>


  </div>    
  
</div>

<!-- Section 1 -->

<div class="row mt-5">

  <div class="col col-md-4 offset-md-3 mt-5">
    <h5 class="block_header_text"><strong>BECOME AN ALLEYCAT</strong></h5>
    <h3 class=""><strong>Feed Your Fashion Fetish</strong></h3>  
    <h4 class="mt-3">As an AlleyCat you become a part of the next generation of online shopping. You will fulfill Try & Buy requests as per your schedule. This involves receiving products at your home, visiting the customer and helping them try on the product.</h4>
  </div>    
  
  <div class="col-md-2 d-none d-sm-block col-sm-4">
    <%= image_tag "p1.png", class: "img-fluid" %>
  </div>
    

</div>  

<div class="row mt-5">
  <div align="center" class="col-md-3 offset-md-2">
    
    <%= image_tag "p1_1.png", class: "img-fluid block_icon" %>

    <div class="row mt-3">
      <div  class="col-md-12">
        <h5><strong>Earn with Flexibility</strong></h5>
        <p class="mt-2 lead">Earn a competitive wage in your free time based on your performance and ratings.</p>
      </div>
    </div>

  </div>

  <div align="center" class="col-md-3">
    
    <%= image_tag "p1_2.png", class: "img-fluid block_icon" %>

    <div class="row mt-3">
      <div  class="col-md-12">
        <h5><strong>Develop Fashion Expertise</strong></h5>
        <p class="mt-2 lead">Learn about the latest fashion trends along with fashion forward retailers</p>
      </div>
    </div>

  </div>

  <div align="center" class="col-md-3">
    
    <%= image_tag "p1_3.png", class: "img-fluid block_icon" %>

    <div class="row mt-3">
      <div  class="col-md-12">
        <h5><strong>Be a Community Hero</strong></h5>
        <p class="mt-2 lead">Use your expertise to help your neighbors stay stylish and feel sexy</p>
      </div>
    </div>

  </div>

</div>

<!-- Sign Up Form -->



<div class="row mt-5">
  <div class="col-md-12">
    <h1 align="center">Sign Up Now & Become an AlleyCat!</h1>
  </div>
</div>

<%= form_for(@partner, :html => {class: "form", role: "form"}) do |f| %>
  <div class="form-row mt-4">
    <div class="form-group col-md-4 offset-md-4">
      <%= f.text_field :name, class: "form-control", placeholder: "Full Name" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4 offset-md-4">
      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-row">
    
    <div class="form-group col-md-4 offset-md-4">
      <%= f.text_field :phone, class: "form-control", placeholder: "Mobile Number" %>
    </div>

  </div>

  <div class="row mb-5">
    <div class="col-md-4 offset-md-4">
      <%= f.submit "Register Now", class: "btn btn_1 btn-block btn-lg mb-5" %>
    </div>
  </div>
 

<% end %>

<!-- Footer -->

<div class="row header_bg">

  <div class="col col-md-12 mt-5">
    <h1 align="center" class="mt-5 header_text">What are you waiting for? Be part of the e-commerce revolution.</h1>
  </div>  

  <div class="col-md-12 header_text">
    <h4 align="center"><%= link_to "Terms & Conditions", terms_path %> and <%= link_to "Privacy Policy", terms_path %></h4>
  </div>
  
  
</div>


